server=1
txindex=0

rpcuser=${RPC_USER}
rpcpassword=${RPC_PASSWORD}
rpcport=${BSV_RPC_PORT}
rpcbind=0.0.0.0
rpcallowip=127.0.0.1/32
rpcallowip=${APPS_SUBNET}
rpcallowip=10.0.0.0/8
rpcallowip=172.16.0.0/12
rpcallowip=192.168.0.0/16

# Bitcoin SV Node mandatory defaults (safe for solo mining)
# NOTE: some mainnet nodes produce very large blocks/scripts. Setting these too low can
# cause IBD to stall at the first oversize block. 0 = unlimited.
excessiveblocksize=0
maxstackmemoryusageconsensus=0
minminingtxfee=0.000005

# ZMQ (ckpool block notifications)
zmqpubhashblock=tcp://0.0.0.0:${BSV_ZMQ_HASHBLOCK_PORT}

# Network
port=${BSV_P2P_PORT}
listen=1
upnp=1

# Pruning (mandatory): keep only a rolling tail of recent blocks to reduce retained history.
# Min supported prune is 550; this app defaults to 550 and caps at 2500.
prune=550
